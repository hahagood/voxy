[Unit]
Description=Voxy STT Daemon - 语音识别模型常驻服务
Documentation=https://github.com/user/voxy
After=default.target

[Service]
Type=simple
ExecStart=%h/.local/bin/voxy daemon start --foreground
ExecStop=%h/.local/bin/voxy daemon stop
Restart=on-failure
RestartSec=5

# 环境变量（根据需要取消注释）
# Environment=CUDA_VISIBLE_DEVICES=0

[Install]
WantedBy=default.target
